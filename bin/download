#!/usr/bin/env bash
set -e

VERSION=$1
INSTALL_DIR=$ASDF_INSTALL_PATH

mkdir -p $INSTALL_DIR

# 下载bandwhich二进制文件
curl -L "https://github.com/imsnif/bandwhich/releases/download/v${VERSION}/bandwhich-v${VERSION}-x86_64-unknown-linux-musl.tar.gz" -o bandwhich.tar.gz

# 解压二进制文件
tar -xzf bandwhich.tar.gz -C $INSTALL_DIR

# 清理
rm bandwhich.tar.gz
